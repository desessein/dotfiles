set $i3_resurrect i3-resurrect

mode "save" {
	# Extra workspaces for Monitor 1 (Ctrl+$mod+q-w-e-r-t-y-u-i-o for workspaces 10-18)
	bindsym Ctrl+$mod+q exec "$i3_resurrect save -w 10 -n  --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 10"
	bindsym Ctrl+$mod+w exec "$i3_resurrect save -w 11 -n  --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 11"
	bindsym Ctrl+$mod+e exec "$i3_resurrect save -w 12 -n  --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 12"
	bindsym Ctrl+$mod+r exec "$i3_resurrect save -w 13 -n  --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 13"
	bindsym Ctrl+$mod+t exec "$i3_resurrect save -w 14 -n  --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 14"
	bindsym Ctrl+$mod+y exec "$i3_resurrect save -w 15 -n  --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 15"
	bindsym Ctrl+$mod+u exec "$i3_resurrect save -w 16 -n  --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 16"
	bindsym Ctrl+$mod+i exec "$i3_resurrect save -w 17 -n  --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 17"
	bindsym Ctrl+$mod+o exec "$i3_resurrect save -w 18 -n  --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 18"

	# Extra workspaces for Monitor 2 (Ctrl+$mod+1-9 for workspaces 20-28)
	bindsym Ctrl+$mod+1 exec "$i3_resurrect save -w 20 -n --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 20"
	bindsym Ctrl+$mod+2 exec "$i3_resurrect save -w 21 -n --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 21"
	bindsym Ctrl+$mod+3 exec "$i3_resurrect save -w 22 -n --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 22"
	bindsym Ctrl+$mod+4 exec "$i3_resurrect save -w 23 -n --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 23"
	bindsym Ctrl+$mod+5 exec "$i3_resurrect save -w 24 -n --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 24"
	bindsym Ctrl+$mod+6 exec "$i3_resurrect save -w 25 -n --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 25"
	bindsym Ctrl+$mod+7 exec "$i3_resurrect save -w 26 -n --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 26"
	bindsym Ctrl+$mod+8 exec "$i3_resurrect save -w 27 -n --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 27"
	bindsym Ctrl+$mod+9 exec "$i3_resurrect save -w 28 -n --swallow=class,instance,title && ~/.config/i3-resurrect/scripts/save-browser-tabs.sh 28"

	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym s mode "default"
	bindsym $mod+s mode "default"
}

mode "restore" {
    # Extra Monitor 1 workspaces (programs-only with Ctrl+$mod+key)
    bindsym Ctrl+$mod+q exec "$i3_resurrect restore -w 10 -n --programs-only && ~/.config/i3-resurrect/scripts/restore-browser-tabs.sh 10"
    bindsym Ctrl+$mod+w exec "$i3_resurrect restore -w 11 -n --programs-only && ~/.config/i3-resurrect/scripts/restore-browser-tabs.sh 11"
    bindsym Ctrl+$mod+e exec "$i3_resurrect restore -w 12 -n --programs-only && ~/.config/i3-resurrect/scripts/restore-browser-tabs.sh 12"
    bindsym Ctrl+$mod+r exec "$i3_resurrect restore -w 13 -n --programs-only && ~/.config/i3-resurrect/scripts/restore-browser-tabs.sh 13"
    bindsym Ctrl+$mod+t exec "$i3_resurrect restore -w 14 -n --programs-only && ~/.config/i3-resurrect/scripts/restore-browser-tabs.sh 14"
    bindsym Ctrl+$mod+y exec "$i3_resurrect restore -w 15 -n --programs-only && ~/.config/i3-resurrect/scripts/restore-browser-tabs.sh 15"
    bindsym Ctrl+$mod+u exec "$i3_resurrect restore -w 16 -n --programs-only && ~/.config/i3-resurrect/scripts/restore-browser-tabs.sh 16"
